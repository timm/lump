here() { cd $1; basename `pwd`; }    
vims() { vim -u $Lump/.var/vimrc +PluginInstall +qall; }

for i in *.lisp; do
  f=$(basename $i .lisp)
  com="alias $f='sbcl --script $i'"
  tput bold; tput setaf 0
  echo "# defining $com"
  tput sgr0
  eval  $com
done

